<div class="container">
	<%= form_for(@user) do |f| %>
		<div class="field">
			<%= f.label :name %>
			<%= f.text_field :name %> 
		</div>
		<div class="field">
			<%= f.label :image %>
			<%= f.file_field :image %> 
		</div>

		<div class="field">
		    <%= f.label :'鍵アカウントにしますか?' %>
		    <%= f.check_box :locked, {}, 'true', 'false' %>
		</div>
  
		<div class="actions">
		    <%= f.submit "Create" %>
		</div>
	<% end %>
</div>