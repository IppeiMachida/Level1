<div class="container">
	<h2>Title</h2>
	<p><%= @post.title %></p>
	<h2>Body</h2>
	<p><%= @post.body %></p>
	<% if current_user.id == @post.user_id %>
	      <%= link_to 'Edit', edit_post_path(@post) %> |
	      <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %> |
	<% end %>
	<%= form_for([@post,Comment.new]) do |f| %>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit%>
  </div>
  <% end %>
  <% @comments.each do |comment| %>
    <%= comment.user.name %>
    <%= comment.body %>
    <%= link_to 'Destroy', post_comments_path(comment.post), method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</div>